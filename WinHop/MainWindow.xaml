<Window x:Class="WinHop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WinHop"
        Title="WinHop"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        ShowActivated="False"
        AllowsTransparency="True"
        Background="Transparent"
        Width="280"
        Height="480"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        MouseLeave="Window_MouseLeave"
        MouseEnter="Window_MouseEnter"
        PreviewKeyDown="Window_PreviewKeyDown"
        Deactivated="Window_Deactivated">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:FocusedToBrushConverter x:Key="FocusedBrush"/>
        
        <!-- Dark context menu -->
        <Style TargetType="ContextMenu">
            <Setter Property="Background" Value="#F0181818"/>
            <Setter Property="Foreground" Value="#E0FFFFFF"/>
            <Setter Property="BorderBrush" Value="#30FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContextMenu">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="MenuItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#D0FFFFFF"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" 
                                CornerRadius="4" Padding="{TemplateBinding Padding}" Margin="2,1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter ContentSource="Header" VerticalAlignment="Center"/>
                                <Path x:Name="Arrow" Grid.Column="1" Data="M0,0 L4,4 L0,8" 
                                      Stroke="#60FFFFFF" StrokeThickness="1.5" Margin="8,0,0,0"
                                      VerticalAlignment="Center" Visibility="Collapsed"/>
                                <Popup x:Name="PART_Popup" IsOpen="{Binding IsSubmenuOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                       Placement="Right" AllowsTransparency="True" Focusable="False" PopupAnimation="Fade">
                                    <Border Background="#F0181818" BorderBrush="#30FFFFFF" BorderThickness="1" 
                                            CornerRadius="8" Padding="2" Margin="4">
                                        <StackPanel IsItemsHost="True"/>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#20FFFFFF"/>
                            </Trigger>
                            <Trigger Property="HasItems" Value="True">
                                <Setter TargetName="Arrow" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="Separator">
            <Setter Property="Height" Value="1"/>
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="Background" Value="#20FFFFFF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Separator">
                        <Border Background="{TemplateBinding Background}" Height="{TemplateBinding Height}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Minimal scrollbar -->
        <Style TargetType="ScrollBar">
            <Setter Property="Width" Value="3"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Margin" Value="0,2,1,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Track x:Name="PART_Track" IsDirectionReversed="True">
                            <Track.Thumb>
                                <Thumb Background="#18FFFFFF" BorderThickness="0">
                                    <Thumb.Template>
                                        <ControlTemplate TargetType="Thumb">
                                            <Border Background="#18FFFFFF" CornerRadius="1.5"/>
                                        </ControlTemplate>
                                    </Thumb.Template>
                                </Thumb>
                            </Track.Thumb>
                        </Track>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Compact window item -->
        <Style x:Key="WindowItem" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#12FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#22FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Pinned app button -->
        <Style x:Key="PinnedBtn" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="#10FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#20FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Folder header -->
        <Style x:Key="FolderHeader" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#70FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6,5"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="Arrow" Text="›" FontSize="11" Foreground="#40FFFFFF" 
                                           VerticalAlignment="Center" Margin="0,0,6,0" FontWeight="Bold"/>
                                <ContentPresenter Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#08FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Arrow" Property="Text" Value="⌄"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Edge toggle -->
        <Style x:Key="EdgePill" TargetType="ToggleButton">
            <Setter Property="Foreground" Value="#40FFFFFF"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="B" Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="B" Property="Background" Value="#0AFFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="B" Property="Background" Value="#12FFFFFF"/>
                                <Setter Property="Foreground" Value="#AAFFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border x:Name="Root"
            CornerRadius="12"
            Background="#F5101012"
            BorderBrush="#12FFFFFF"
            BorderThickness="1">
        <Border.RenderTransform>
            <TranslateTransform x:Name="SlideTransform"/>
        </Border.RenderTransform>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header: Search -->
            <Border Padding="10,10,10,6">
                <Border Background="#0CFFFFFF" CornerRadius="8" Padding="10,7">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="⌕" FontSize="12" Foreground="#35FFFFFF" 
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="SearchBox"
                                 Grid.Column="1"
                                 FontSize="12"
                                 Background="Transparent"
                                 Foreground="#C0FFFFFF"
                                 BorderThickness="0"
                                 CaretBrush="#60FFFFFF"
                                 VerticalAlignment="Center"
                     KeyDown="SearchBox_KeyDown"
                                 TextChanged="SearchBox_TextChanged">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Grid>
                                                    <TextBlock x:Name="Ph" Text="Search..." Foreground="#30FFFFFF" 
                                                               VerticalAlignment="Center" Visibility="Collapsed"/>
                                                    <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <DataTrigger Binding="{Binding Text.Length, RelativeSource={RelativeSource Self}}" Value="0">
                                                        <Setter TargetName="Ph" Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Grid>
                </Border>
            </Border>

            <!-- Unified scroll area -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="0,0,1,0">
                <StackPanel Margin="6,0,6,6">
                    
                    <!-- Pinned apps -->
                    <ItemsControl x:Name="PinnedApps" Margin="4,2,4,6">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource PinnedBtn}" Margin="0,0,6,0"
                                        Click="PinnedApp_Click" ToolTip="{Binding ProcessName}">
                                    <Button.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Unpin" Click="MenuItem_Unpin"/>
                                        </ContextMenu>
                                    </Button.ContextMenu>
                                    <Image Width="18" Height="18" Source="{Binding Icon}" 
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Workspaces -->
                    <ItemsControl x:Name="WorkspacesList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#08FFFFFF" CornerRadius="8" Margin="0,0,0,4" Padding="4">
                                    <StackPanel>
                                        <ToggleButton Style="{StaticResource FolderHeader}"
                                                      Content="{Binding Name}"
                                                      IsChecked="{Binding IsExpanded, Mode=TwoWay}"
                                                      Tag="{Binding}"
                                                      Click="WorkspaceHeader_Click">
                                            <ToggleButton.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="Rename" Click="MenuItem_RenameWorkspace"/>
                                                    <MenuItem Header="Delete" Click="MenuItem_DeleteWorkspace"/>
                                                </ContextMenu>
                                            </ToggleButton.ContextMenu>
                                        </ToggleButton>
                                        <ItemsControl ItemsSource="{Binding Windows}"
                                                      Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVis}}"
                                                      Margin="8,2,2,2"
                                                      Tag="{Binding}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border x:Name="WsItem" Padding="6,5" Margin="0,1" CornerRadius="5" Cursor="Hand"
                                                            MouseLeftButtonUp="WorkspaceWindow_Click"
                                                            MouseRightButtonUp="WorkspaceWindow_RightClick"
                                                            MouseDown="WorkspaceWindow_MouseDown">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background" Value="Transparent"/>
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="#10FFFFFF"/>
                                                                    </Trigger>
                                                                    <DataTrigger Binding="{Binding IsFocused}" Value="True">
                                                                        <Setter Property="Background" Value="#1855AAFF"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <Border.ContextMenu>
                                                            <ContextMenu>
                                                                <MenuItem Header="Remove from workspace" 
                                                                          Click="MenuItem_RemoveFromWorkspace"/>
                                                            </ContextMenu>
                                                        </Border.ContextMenu>
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            
                                                            <!-- Focus dot -->
                                                            <Ellipse Width="4" Height="4" Margin="0,0,6,0" VerticalAlignment="Center"
                                                                     Fill="{Binding IsFocused, Converter={StaticResource FocusedBrush}}"/>
                                                            
                                                            <Image Grid.Column="1" Width="14" Height="14" Source="{Binding Icon}" 
                                                                   Margin="0,0,8,0" VerticalAlignment="Center"
                                                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                                                            <TextBlock Grid.Column="2" Text="{Binding Title}" 
                                                                       Foreground="{Binding IsFocused, Converter={StaticResource FocusedBrush}, ConverterParameter=text}"
                                                                       FontSize="11.5"
                                                                       TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
                                                            
                                                            <Button x:Name="WsClose" Grid.Column="3" 
                                                                    Width="16" Height="16" Margin="4,0,0,0"
                                                                    Click="CloseWindow_Click" Visibility="Hidden">
                                                                <Button.Template>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border x:Name="Bg" Background="Transparent" CornerRadius="3">
                                                                            <TextBlock Text="×" FontSize="12" Foreground="#50FFFFFF"
                                                                                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-2,0,0"/>
                                                                        </Border>
                                                                        <ControlTemplate.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter TargetName="Bg" Property="Background" Value="#40FF5555"/>
                                                                            </Trigger>
                                                                        </ControlTemplate.Triggers>
                                                                    </ControlTemplate>
                                                                </Button.Template>
                                                            </Button>
                                                        </Grid>
                                                    </Border>
                                                    <DataTemplate.Triggers>
                                                        <Trigger SourceName="WsItem" Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="WsClose" Property="Visibility" Value="Visible"/>
                                                        </Trigger>
                                                    </DataTemplate.Triggers>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Section label -->
                    <TextBlock Text="Windows" Foreground="#40FFFFFF" FontSize="10" FontWeight="SemiBold"
                               Margin="6,6,0,4"/>

                    <!-- Windows list -->
            <ListBox x:Name="WindowsList"
                     Background="Transparent"
                     BorderThickness="0"
                             Padding="0"
                             ItemContainerStyle="{StaticResource WindowItem}"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Disabled"
                             MouseLeftButtonUp="WindowsList_MouseLeftButtonUp"
                             KeyDown="WindowsList_KeyDown"
                             SelectionChanged="WindowsList_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                                <Grid x:Name="ItemGrid" MouseDown="WindowItem_MouseDown">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Focus dot -->
                                    <Ellipse Width="5" Height="5" Margin="0,0,8,0" VerticalAlignment="Center"
                                             Fill="{Binding IsFocused, Converter={StaticResource FocusedBrush}}"/>

                                    <Image Grid.Column="1" Width="16" Height="16" Margin="0,0,8,0"
                                           VerticalAlignment="Center" Source="{Binding Icon}"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>

                                    <TextBlock Grid.Column="2" Text="{Binding Title}" FontSize="11.5"
                                               Foreground="{Binding IsFocused, Converter={StaticResource FocusedBrush}, ConverterParameter=text}"
                                               TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>

                                    <Button x:Name="CloseBtn" Grid.Column="3" 
                                            Width="16" Height="16" Margin="6,0,0,0"
                                            Click="CloseWindow_Click" Visibility="Hidden">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="CloseBg" Background="Transparent" CornerRadius="3">
                                                    <TextBlock Text="×" FontSize="12" Foreground="#50FFFFFF"
                                                               HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-2,0,0"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="CloseBg" Property="Background" Value="#40FF5555"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </Grid>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                        <Setter TargetName="CloseBtn" Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Pin to top" Click="MenuItem_PinToTop"/>
                                <Separator/>
                                <MenuItem x:Name="AddToWorkspaceMenu" Header="Add to workspace"/>
                            </ContextMenu>
                        </ListBox.ContextMenu>
            </ListBox>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" Padding="10,6" BorderBrush="#08FFFFFF" BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Foreground="#35FFFFFF" FontSize="9" VerticalAlignment="Center">
                        <Run Text="↑↓"/>
                        <Run Text="nav"/>
                        <Run Text=" · "/>
                        <Run Text="esc"/>
                        <Run Text="close"/>
                        <Run Text=" · "/>
                        <Run Text="cltr+k"/>
                        <Run Text="search"/>
                    </TextBlock>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <ToggleButton x:Name="LeftEdgeToggle" Style="{StaticResource EdgePill}" Content="◀"
                                      ToolTip="Left edge" Checked="EdgeToggle_Changed" Unchecked="EdgeToggle_Changed"/>
                        <ToggleButton x:Name="RightEdgeToggle" Style="{StaticResource EdgePill}" Content="▶"
                                      ToolTip="Right edge" Checked="EdgeToggle_Changed" Unchecked="EdgeToggle_Changed"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
