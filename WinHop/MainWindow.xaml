<Window x:Class="WinHop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WinHop"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        ShowActivated="False"
        AllowsTransparency="False"
        Background="#FF0F0F10"
        Width="360"
        Height="600"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        MouseLeave="Window_MouseLeave"
        MouseEnter="Window_MouseEnter">

    <Window.Resources>
        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd"
                                        Property="Background"
                                        Value="#18FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd"
                                        Property="Background"
                                        Value="#2AFFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ToggleButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FF19191A"/>
            <Setter Property="BorderBrush" Value="#26FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="MinWidth" Value="56"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="B"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="B" Property="BorderBrush" Value="#40FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="B" Property="Background" Value="#2AFFFFFF"/>
                                <Setter TargetName="B" Property="BorderBrush" Value="#55FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="B" Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border x:Name="Root"
            CornerRadius="14"
            Background="#FF0F0F10"
            BorderBrush="#26FFFFFF"
            BorderThickness="1"
            Padding="12">
        <Border.RenderTransform>
            <!-- We animate this so the window stays anchored to the monitor (no cross-monitor sliding). -->
            <TranslateTransform x:Name="SlideTransform" />
        </Border.RenderTransform>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="WinHop"
                           Foreground="White"
                           Opacity="0.85"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="0,0,0,0">
                    <ToggleButton x:Name="LeftEdgeToggle"
                                  Content="Left"
                                  Margin="0,0,8,0"
                                  Checked="EdgeToggle_Changed"
                                  Unchecked="EdgeToggle_Changed"/>
                    <ToggleButton x:Name="RightEdgeToggle"
                                  Content="Right"
                                  Checked="EdgeToggle_Changed"
                                  Unchecked="EdgeToggle_Changed"/>
                </StackPanel>
            </Grid>

            <TextBox x:Name="SearchBox"
                     Grid.Row="1"
                     Height="36"
                     FontSize="14"
                     Padding="10,6"
                     Background="#FF19191A"
                     Foreground="White"
                     BorderBrush="#26FFFFFF"
                     BorderThickness="1"
                     CaretBrush="White"
                     KeyDown="SearchBox_KeyDown"
                     TextChanged="SearchBox_TextChanged"/>

            <ListBox x:Name="WindowsList"
                     Grid.Row="3"
                     Background="Transparent"
                     BorderThickness="0"
                     Foreground="White"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     VirtualizingPanel.IsVirtualizing="True"
                     MouseDoubleClick="WindowsList_MouseDoubleClick"
                     KeyDown="WindowsList_KeyDown">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <DockPanel LastChildFill="True">
                            <Image Width="18"
                                   Height="18"
                                   Margin="0,1,10,0"
                                   Source="{Binding Icon}"/>
                            <StackPanel>
                                <TextBlock Text="{Binding Title}"
                                           FontWeight="SemiBold"
                                           TextTrimming="CharacterEllipsis"/>
                                <TextBlock Text="{Binding ProcessName}"
                                           Opacity="0.7"
                                           FontSize="12"
                                           TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </DockPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Border>
</Window>